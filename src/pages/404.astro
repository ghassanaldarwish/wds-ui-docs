---

import '../styles/global.css';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../layouts/footer/index.astro';
import Navbar from "../layouts/navbar/index.astro";




---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={'home'} description={'description'} />
	</head>	
		<body class=" min-h-screen "   >
			<Navbar path="/"/>
		
			<main class=" mt-[50px] flex flex-col gap-4 w-full justify-center items-center  relative  min-h-[100vh] animate-in fade-in duration-500" >
                <h1 class="text-lg md:text-2xl">Page not found!</h1>
                <p>
                    Path not recognised&hellip; <a
						class="text-blue-500 hover:underline"
                        aria-label="Return to home page"
                        href="/"
                        >Go&nbsp;home?
                    </a>
                </p>
			</main>
      <Footer path="/"/>
	</body>
</html>






<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}

</script>


